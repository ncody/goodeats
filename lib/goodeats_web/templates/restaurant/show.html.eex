<h1><%= @restaurant.name %></h1>
<p>location: <%= @restaurant.city.name %>, <%= @restaurant.city.country.name %>
<p>cuisine: <%= @restaurant.cuisine %></p>
<p>description: <%= @restaurant.description %>
<%= display_rating(@restaurant) %>

<span><%= link "Back", to: country_city_restaurant_path(@conn, :index, @restaurant.city.country.id, @restaurant.city) %></span>
<span><%= link "Edit", to: country_city_restaurant_path(@conn, :edit, @restaurant.city.id, @restaurant.city.country.id, @restaurant.id) %></span>